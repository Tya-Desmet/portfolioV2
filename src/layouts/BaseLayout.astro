---
import SEO from '../components/SEO.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  image?: string;
  canonicalURL?: string;
  structuredData?: object;
}

const { title, description, image, canonicalURL, structuredData } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <SEO 
      title={title}
      description={description}
      image={image}
      url={canonicalURL || Astro.url.href}
      structuredData={structuredData}
    />
    
    <!-- RSS Feed Discovery -->
    <link 
      rel="alternate" 
      type="application/rss+xml" 
      title="Blog Technique - Mystya" 
      href="/rss.xml" 
    />
</head>
<body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    
    <!-- JavaScript pour animations et interactions -->
    <script src="/js/animations.js" is:inline></script>
    <script src="/js/contact-form.js" is:inline></script>
    <script src="/js/navigation.js" is:inline></script>
</body>
</html>
