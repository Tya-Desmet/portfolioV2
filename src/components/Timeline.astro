---
// Timeline Component - Parcours professionnel
export interface TimelineItem {
  title: string;
  organization: string;
  date: string;
  datetime: string;
  description: string;
  tags?: string[];
}

interface Props {
  items: TimelineItem[];
}

const { items } = Astro.props;
---

<section id="parcours" class="timeline-section animate-on-scroll">
  <div class="container">
    <h2 class="section-title">Parcours Professionnel</h2>
    
    <ol class="timeline">
      {items.map((item) => (
        <li class="timeline-item">
          <div class="timeline-marker"></div>
          <div class="timeline-content">
            <h3 class="timeline-title">{item.title}</h3>
            <p class="timeline-organization">{item.organization}</p>
            <time class="timeline-date" datetime={item.datetime}>{item.date}</time>
            <p class="timeline-description">{item.description}</p>
            {item.tags && item.tags.length > 0 && (
              <ul class="timeline-tags">
                {item.tags.map((tag) => (
                  <li>{tag}</li>
                ))}
              </ul>
            )}
          </div>
        </li>
      ))}
    </ol>
  </div>
</section>

<style>
  /* Timeline Section */
  .timeline-section {
    padding: var(--spacing-3xl) var(--spacing-md);
    background: linear-gradient(180deg, var(--color-background) 0%, var(--color-surface) 100%);
  }

  .timeline-section .container {
    max-width: 1000px;
    margin: 0 auto;
  }

  .section-title {
    font-size: var(--font-size-h1);
    font-weight: var(--font-weight-bold);
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-align: center;
    margin-bottom: var(--spacing-sm);
  }

  .section-title::after {
    content: '';
    display: block;
    width: 80px;
    height: 4px;
    background: var(--gradient-primary);
    margin: var(--spacing-md) auto var(--spacing-2xl);
    border-radius: var(--radius-full);
  }

  .timeline {
    list-style: none;
    padding: 0;
    margin: var(--spacing-2xl) 0 0 0;
    position: relative;
  }

  /* Ligne verticale avec gradient */
  .timeline::before {
    content: '';
    position: absolute;
    left: 14px;
    top: 0;
    bottom: 0;
    width: 3px;
    background: var(--gradient-primary);
    border-radius: var(--radius-full);
    box-shadow: 0 0 20px rgba(124, 58, 237, 0.3);
  }

  @media (min-width: 640px) {
    .timeline::before {
      left: 20px;
      width: 4px;
    }
  }

  .timeline-item {
    position: relative;
    padding-left: 50px;
    padding-bottom: var(--spacing-xl);
  }

  @media (min-width: 640px) {
    .timeline-item {
      padding-left: 80px;
      padding-bottom: var(--spacing-2xl);
    }
  }

  .timeline-item:last-child {
    padding-bottom: 0;
  }

  /* Marqueur circulaire */
  .timeline-marker {
    position: absolute;
    left: 4px;
    top: 4px;
    width: 24px;
    height: 24px;
    background: var(--gradient-primary);
    border: 3px solid var(--color-background);
    border-radius: var(--radius-full);
    box-shadow: var(--shadow-purple-glow);
    z-index: 2;
    transition: all var(--transition-normal);
  }

  @media (min-width: 640px) {
    .timeline-marker {
      left: 8px;
      width: 28px;
      height: 28px;
      border: 4px solid var(--color-background);
    }
  }

  .timeline-item:hover .timeline-marker {
    transform: scale(1.2);
    box-shadow: 0 0 40px rgba(124, 58, 237, 0.6);
  }

  /* Contenu */
  .timeline-content {
    background: var(--color-background);
    padding: var(--spacing-md);
    border-radius: var(--radius-md);
    border: 2px solid var(--color-border);
    box-shadow: var(--shadow-md);
    transition: all var(--transition-normal);
  }

  @media (min-width: 640px) {
    .timeline-content {
      padding: var(--spacing-lg);
    }
  }

  @media (min-width: 768px) {
    .timeline-content {
      padding: var(--spacing-xl);
    }
  }

  .timeline-item:hover .timeline-content {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-purple-glow);
    transform: translateX(4px);
  }

  .timeline-title {
    font-size: var(--font-size-h3);
    font-weight: var(--font-weight-bold);
    color: var(--color-text);
    margin-bottom: var(--spacing-xs);
  }

  @media (min-width: 768px) {
    .timeline-title {
      font-size: var(--font-size-h2);
    }
  }

  .timeline-organization {
    font-size: var(--font-size-body);
    font-weight: var(--font-weight-semibold);
    color: var(--color-primary);
    margin-bottom: var(--spacing-xs);
  }

  .timeline-date {
    display: block;
    font-size: var(--font-size-small);
    color: var(--color-text-light);
    margin-bottom: var(--spacing-sm);
  }

  .timeline-description {
    font-size: var(--font-size-body);
    color: var(--color-text-light);
    line-height: 1.7;
    margin-bottom: var(--spacing-md);
  }

  .timeline-tags {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
  }

  .timeline-tags li {
    font-size: var(--font-size-small);
    padding: 4px 12px;
    background: rgba(124, 58, 237, 0.1);
    color: var(--color-primary);
    border-radius: var(--radius-sm);
    border: 1px solid rgba(124, 58, 237, 0.2);
    font-weight: var(--font-weight-medium);
  }

  /* Animation on scroll */
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }

  .animate-on-scroll.visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>
